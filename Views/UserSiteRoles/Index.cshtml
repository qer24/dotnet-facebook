@model IEnumerable<dotnet_facebook.Models.DatabaseObjects.Roles.UserSiteRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.SiteRoleName)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.UserSiteRoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
