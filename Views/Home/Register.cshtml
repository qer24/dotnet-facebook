@model dotnet_facebook.Models.DatabaseObjects.Users.User

@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutRegular";
}

<div class="card">
    <h1 class="mx-auto p-2 m-2">Register</h1>
    <form method="POST">
        <div class="row p-2 m-2">
            <div class="form-floating form-floating-outlined-primary p-2 m-2">
                <input asp-for="Nickname" type="text" class="form-control" id="user" placeholder="User Name" autocomplete="off">
                <label for="firstname-outline">User Name</label>
            </div>
            <div class="form-floating form-floating-outlined-primary p-2 m-2">
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="User Name" autocomplete="off">
                <label for="firstname-outline">Password</label>
            </div>
            <span class="text-danger">@Html.ValidationMessage("error")</span>
            <button type="submit" value="register" class="btn btn-outline-primary p-2 m-2">
                Register
                <span class="ripple-surface"></span>
            </button>
        </div>
    </form>
    <a asp-action="Login" class="link-secondary mx-auto m-2 ps-3">Already registered?</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}