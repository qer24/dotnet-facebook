@model dotnet_facebook.Models.DatabaseObjects.Users.PrivateMessage

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PrivateMessage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Select User</label>
                <select name="selectedUserId1" class="form-control">
                    <option value="">Select User</option>
                    @foreach (var user in ViewBag.Users)
                    {
                        <option value="@user.Value">@user.Text</option>
                    }
                </select>
                <span class="text-danger">@Html.ValidationMessage("selectedUserId1")</span>
            </div>
            <div class="form-group">
                <label>Select User</label>
                <select name="selectedUserId2" class="form-control">
                    <option value="">Select User</option>
                    @foreach (var user in ViewBag.Users)
                    {
                        <option value="@user.Value">@user.Text</option>
                    }
                </select>
                <span class="text-danger">@Html.ValidationMessage("selectedUserId2")</span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
